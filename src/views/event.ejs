<%- include('./partials/header'); %>
<body>
  <div class="container p-5">
    <h1><%= event.name %></h1>

    <p><%= event.description %></p>
    <p><%= event.email %></p>
    <p><%= event.cpf %></p>

    <% if(!event.finished){ %> 
      <form action="/finish" method="POST">
        <input type="hidden" name="id" value="<%= event._id%>">
        <button class="btn btn-primary w-100">Finish</button>
      </form>
    <% } %>
  </div>
</body>

